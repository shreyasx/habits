datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Habit {
  id          String            @id @default(cuid())
  name        String
  emoji       String
  color       String
  sortOrder   Int
  completions HabitCompletion[]
}

model HabitCompletion {
  id        String   @id @default(cuid())
  habit     Habit    @relation(fields: [habitId], references: [id], onDelete: Cascade)
  habitId   String
  date      DateTime
  completed Boolean
}